<% include ../_partials/head %>
  <% include ../_partials/messages %>
  <main>
    <article class="post">
      <% include _header %>
      <section class="image">
        <img src="/<%= image.path %>" />
      </section>
      <% include _feedbackControls %>
      <section class="notes">
        <% for (let note of image.notes) { %>
          <article class="note">
            <header>
              <img class="avatar" src="<%= note.author.get('picture') %>" />
              <aside>
                <div><%= note.author.get('nickname') %></div>
              </aside>
            </header>
          </article>
        <% } %>
      </section>
      <% if (canWrite) { %>
        <% include _controls %>
      <% } %>
    </article>
  </main>
<% include ../_partials/footer %>

