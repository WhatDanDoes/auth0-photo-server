<% include ../_partials/head %>
  <% include ../_partials/messages %>
  <main>
    <article class="post">
      <% include _header %>
      <section class="image">
        <img src="/<%= image.path %>" />
      </section>
      <% if (canWrite) { %>
        <section id="image-controls">
          <form action="<%= `/${image.path.replace('uploads', 'image')}?_method=DELETE` %>" method="post" id="delete-image-form">
            <button id="delete-image" type="submit">Delete</button>
          </form>
          <% if (!process.env.SUDO || agent.email === process.env.SUDO) { %>
            <form action="<%= `/${image.path.replace('uploads', 'image')}` %>" method="post" id="publish-image-form">
              <button id="publish-image" type="submit">
                <%= image.published ? 'Unpublish' : 'Publish' %>
              </button>
            </form>
          <% } %>
        </section>
      <% } %>
      <% include _footer %>
    </article>
    <article class="notes">
      <% for (let note of image.notes) { %>
        <section class="note">
          <header>
            <img class="avatar" src="<%= note.author.get('picture') %>" />
            <aside>
              <div><%= note.author.get('nickname') %></div>
            </aside>
          </header>
        </section>
      <% } %>

    </article>
  </main>
<% include ../_partials/footer %>

