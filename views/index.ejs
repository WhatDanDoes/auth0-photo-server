<% include _partials/head %>
  <% include _partials/messages %>
  <main>
    <% if (!images.length) { %>
      <h2>No images</h2>
    <% } else { %>
      <% include _partials/pager %>
      <% for (let image of images) { %>
        <article class="post">
          <% if (agent) { %>
            <header>
              <img class="avatar" src="<%= image.photographer.get('picture') %>" />
              <aside>
                <div><%= image.photographer.get('nickname') %></div>
                <time><%= image.updatedAt %></time>
              </aside>
              <span class="post-menu">
                <i class="fas fa-ellipsis-h"></i>
                <div class="dropdown-content">
                  <p>Flag post</p>
                </div>
              </span>
            </header>
          <% } %>
          <section class="photo">
          <% if (agent) { %>
            <a href="/<%= image.path.replace('uploads', 'image') %>">
              <img src="/<%= image.path %>" />
            </a>
          <% } else { %>
            <img src="/<%= image.path %>" />
          <% } %>
          </section>
          <% if (agent) { %>
            <footer>
              <div><i class="like-button <%= image.likes.indexOf(agent._id) > -1 ? 'fas' : 'far' %> fa-heart" onclick="like('<%= image.path %>', this)"></i></div>
            </header>
          <% } %>
        </article>
      <% } %>
      <% include _partials/pager %>
    <% } %>
  </main> 
<% include _partials/footer %>

